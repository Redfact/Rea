

<% if @partiel %>
  <span class="badge badge-pill badge-warning">Contrat partiel possible</span>
<% end %>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

  <div class="carousel-inner w-100" role="listbox" style="height: 400px !important;" >
    <div class="carousel-item active">     
      <% if !@photos.empty? %>
          <a href= <%=@photos.last.url%> >
          <img class="d-block w-100 "src=<%=@photos.last.url%> alt="First slide">
          </a>
          <% else %>
          <img class="d-block w-100 "src="https://i.imgur.com/u4qCmmYl.jpg" alt="First slide">
      <% end %>
    </div>
  
  <% if !@photos.empty? %>
    <% @photos.each do |photo| %>    
      <div class="carousel-item">
      <a href= <%=photo.url%> >
         <img class="d-block w-100 " src=<%=photo.url%> alt="photo">
      </a>
      </div>
    <% end %>
  <% end %>
  

  
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<%@place_libre.times do%>
  <span class="badge badge-info">Libre</span>
<%end%>
<%@place_occupe.times do%>
  <span class="badge badge-danger">Occupé</span>
<%end%>

<div class="card mt-3 mb-5" style="width: 100%;">
  <div class="card-body">
    <h5 class="card-title"><%=@annonce.lieu%></h5>
    <p class="card-text"><%=@annonce.description%></p>
    <h6 class="card-subtitle mb-2 text-info">Loyer total (mensuel) : <%=@annonce.loyer_total%> Ar</h6>
    <% if @partiel %>
         <h6 class="card-subtitle mb-2 text-info">Loyer en partiel : <%=@annonce.loyer_partiel%> Ar </h6> 
    <% end %>    
    <a class="btn btn-secondary btn-sm" href="#" role="button">Louer</a>
    <a class="btn btn-secondary btn-sm" href="#" role="button">Interessé</a>
    <a class="btn btn-secondary btn-sm" href="#" role="button">Chercher colocataires</a>
    
    <% if @partiel %>
         <a class="btn btn-warning btn-sm" href="#" role="button">Louer partiellement</a> 
    <% end %>
    

  </div>
</div>