<div class="d-flex justify-content-around mb-5 pl-4 pr-4">
<div>
<h2 class="text-center text-info font-weight-bold">Se connecter</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mt-3">
    <%= f.label :email,class:"font-weight-bold text-dark" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
    class:"form-control mr-sm-2 border border-info rounded" %>
  </div>

  <div class="field mt-3">
    <%= f.label 'Mot de passe',class:"font-weight-bold text-dark" %><br />
    <%= f.password_field :password, autocomplete: "Mot de passe",
    class:"form-control mr-sm-2 border border-info rounded" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mt-3">
    <%= f.submit "Se connecter" ,class:"btn btn-info " %>
  </div>
<% end %><br>
<%= render "devise/shared/links" %>
</div>
</div>